body
  border-top 3px solid black
  font-family 'Prata', serif

#container > header
  font-family 'julee' cursive
  font-size 2.2em
  padding 6px 20px
  background #FFF8C6

  span
    display inline
    font-size 0.5em
    line-height 2em

.left
  float left

.right
  float right

a, a:visited
  text-decoration none
  color #406090

a:hover
  color #153E7E

footer
  padding-top 20px
  margin-top 40px
  font-size 0.9em
  color #463E3F
  border-top 1px dotted #34282C

.clearfix:before, .clearfix:after
  content: ""
  display: table

.clearfix:after
  clear: both

.clearfix
  zoom: 1

.comment .attribution
  font-size: 95%
  color: #ddd

ul#comments
  list-style none
  margin-left 0
  padding-left 1em
  border-right 2px solid #DEDEDE

  li.comment
    padding-left 1em
    margin-top 1em
    border-bottom 2px dotted #DEDEDE
    background-repeat no-repeat

    p.attribution, p.content
      margin-left 65px
      text-align justify
      margin-right 20px

    p.attribution
      color #667C26

    &:last-child
      border-bottom none

#search
  text-align center

  input[type='search']
    width 320px

  input[type='submit']
    padding 2px 5px
    margin-left 10px

nav ul li
  display inline
  margin-left 10px

/* A few styles from stackoverflow */
#ie-notsupported
  background-color: #F4A83D;
  border-bottom: 1px solid #D6800C;
  padding: 7px 0;
  font-size: 1.2em;
  font-weight: bold;
  text-align: center;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 100;
  color: #735005;

  .close
    background-color: #FAD163;
    float: right;
    margin-right: 20px;
    border: 2px solid #735005;
    padding-left: 4px;
    padding-right: 4px;
    text-decoration: none;
    display: block;
    cursor: pointer;
/* end stackoverflow */
